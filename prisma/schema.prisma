// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "sqlite"
}

model Song {
  id         Int       @id @default(autoincrement())
  filePath   String    @unique @map("file_path")
  fileName   String    @map("file_name")
  folderPath String    @map("folder_path")
  extension  String
  fileSize   Int       @map("file_size")
  createdAt  DateTime? @map("created_at")
  modifiedAt DateTime? @map("modified_at")
  scannedAt  DateTime  @default(now()) @map("scanned_at")

  // Metadata principal
  title            String?
  artist           String?
  sortArtist       String?  @map("sort_artist")
  album            String?
  sortAlbum        String?  @map("sort_album")
  trackNumber      Int?     @map("track_number")
  trackTotal       Int?     @map("track_total")
  discNumber       Int?     @map("disc_number")
  discTotal        Int?     @map("disc_total")
  year             Int?
  bpm              Int?
  genre            String?
  albumArtist      String?  @map("album_artist")
  sortAlbumArtist  String?  @map("sort_album_artist")
  composer         String?
  conductor        String?
  comment          String?
  grouping         String?
  publisher        String?
  description      String?
  catalogNumber    String?  @map("catalog_number")
  discSubtitle     String?  @map("disc_subtitle")
  lyricist         String?
  barcode          String?
  work             String?
  movementName     String?  @map("movement_name")
  movement         Int?
  originalReleaseDate String? @map("original_release_date")
  copyright        String?
  rating           Int?
  lyrics           String?
  compilation      Boolean? @default(false)

  // Playback
  volume    Float?
  startTime Float?   @map("start_time")
  stopTime  Float?   @map("stop_time")
  gapless   Boolean? @default(false)

  // Stats
  dateAdded  DateTime? @map("date_added")
  lastPlayed DateTime? @map("last_played")
  playCount  Int?      @default(0) @map("play_count")

  // Audio info
  duration      Float?
  bitrate       Int?
  sampleRate    Int?     @map("sample_rate")
  channels      Int?
  bitsPerSample Int?     @map("bits_per_sample")
  codec         String?
  lossless      Boolean  @default(false)
  encoder       String?

  // Relaciones
  metadata SongMetadata[]
  pictures SongPicture[]

  @@index([folderPath])
  @@map("songs")
}

model SongMetadata {
  id     Int    @id @default(autoincrement())
  songId Int    @map("song_id")
  key    String
  value  String?

  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@unique([songId, key])
  @@map("song_metadata")
}

model SongPicture {
  id          Int     @id @default(autoincrement())
  songId      Int     @map("song_id")
  type        String?
  format      String?
  description String?
  data        Bytes?

  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([songId])
  @@map("song_pictures")
}
